{
  "compilerOptions": {
    "types": ["./types.d.ts"],
    "noImplicitAny": false
  },
  "lint": {
    "files": {
      "include": ["./"],
      "exclude": [""]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
